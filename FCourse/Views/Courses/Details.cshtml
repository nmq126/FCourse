@model FCourse.Models.Course

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}
<div class="col-xl-12">
    <div class="widget has-shadow">
        <div class="widget-header bordered no-actions d-flex align-items-center">
            <h4>Course #@Html.DisplayFor(model => model.Id)</h4>
        </div>
        <div class="widget-body">
            <div class="col-10 ml-auto">
                <div class="section-title mt-3 mb-5">
                    <h4>01. General Informations</h4>
                </div>
            </div>
            <form class="form-horizontal">
                <div class="form-group row d-flex align-items-center mb-5">
                    <label class="col-lg-2 form-control-label d-flex justify-content-lg-end">Id</label>
                    <div class="col-lg-6">
                        <input type="text" class="form-control" disabled value="@Html.DisplayFor(model => model.Id)">
                    </div>
                </div>
                <div class="form-group row d-flex align-items-center mb-5">
                    <label class="col-lg-2 form-control-label d-flex justify-content-lg-end">Thumbnail</label>
                    <div class="col-lg-6">
                        <img height="250" src="@Model.Thumbnail" alt="Alternate Text" />
                    </div>
                </div>
                <div class="form-group row d-flex align-items-center mb-5">
                    <label class="col-lg-2 form-control-label d-flex justify-content-lg-end">Name</label>
                    <div class="col-lg-6">
                        <input type="text" class="form-control" disabled value="@Html.DisplayFor(model => model.Name)">
                    </div>
                </div>
                <div class="form-group row d-flex align-items-center mb-5">
                    <label class="col-lg-2 form-control-label d-flex justify-content-lg-end">Category</label>
                    <div class="col-lg-6">
                        <input type="text" class="form-control" disabled value="@Html.DisplayFor(model => model.Category.Name)">
                    </div>
                </div>
                <div class="form-group row d-flex align-items-center mb-5">
                    <label class="col-lg-2 form-control-label d-flex justify-content-lg-end">Level</label>
                    <div class="col-lg-6">
                        <input type="text" class="form-control" disabled value="@Html.DisplayFor(model => model.Level.Name)">
                    </div>
                </div>
                <div class="form-group row d-flex align-items-center mb-5">
                    <label class="col-lg-2 form-control-label d-flex justify-content-lg-end">Teacher</label>
                    <div class="col-lg-6">
                        <input type="text" class="form-control" disabled value="@Html.DisplayFor(model => model.Teacher.Name)">
                    </div>
                </div>
                <div class="form-group row d-flex align-items-center mb-5">
                    <label class="col-lg-2 form-control-label d-flex justify-content-lg-end">Description</label>
                    <div class="col-lg-6">
                        <textarea class="form-control" rows="3" disabled>@Html.DisplayFor(model => model.Description)
                        </textarea>
                    </div>
                </div>
                <div class="form-group row d-flex align-items-center mb-5">
                    <label class="col-lg-2 form-control-label d-flex justify-content-lg-end">Description</label>
                    <div class="col-lg-6">
                        <textarea class="form-control" rows="6" disabled>@Html.DisplayFor(model => model.Detail)
                        </textarea>
                    </div>
                </div>
                <div class="form-group row d-flex align-items-center mb-5">
                    <label class="col-lg-2 form-control-label d-flex justify-content-lg-end">Duration (s)</label>
                    <div class="col-lg-6">
                        <input type="text" class="form-control" disabled value="@Html.DisplayFor(model => model.Duration)">
                    </div>
                </div>
                <div class="form-group row d-flex align-items-center mb-5">
                    <label class="col-lg-2 form-control-label d-flex justify-content-lg-end">Average Rating</label>
                    <div class="col-lg-6">
                        <input type="text" class="form-control" disabled value="@Html.DisplayFor(model => model.Rating)">
                    </div>
                </div>
                <div class="form-group row d-flex align-items-center mb-5">
                    <label class="col-lg-2 form-control-label d-flex justify-content-lg-end">Price</label>
                    <div class="col-lg-6">
                        <input type="text" class="form-control" disabled value="@Html.DisplayFor(model => model.Price)">
                    </div>
                </div>
                <div class="form-group row d-flex align-items-center mb-5">
                    <label class="col-lg-2 form-control-label d-flex justify-content-lg-end">Discount (%)</label>
                    <div class="col-lg-6">
                        <input type="text" class="form-control" disabled value="@Html.DisplayFor(model => model.Discount)">
                    </div>
                </div>
                <div class="form-group row d-flex align-items-center mb-5">
                    <label class="col-lg-2 form-control-label d-flex justify-content-lg-end">Status</label>
                    <div class="col-lg-6">
                        @{
                            string status = null;
                            switch (Model.Status)
                            {
                                case 1:
                                    status = "Acitve";
                                    break;
                                case 0:
                                    status = "Disable";
                                    break;
                            }
                            <input type="text" class="form-control" disabled value="@status">
                        }

                    </div>
                </div>
                <div class="form-group row d-flex align-items-center mb-5">
                    <label class="col-lg-2 form-control-label d-flex justify-content-lg-end">Created At</label>
                    <div class="col-lg-6">
                        <input type="text" class="form-control" disabled value="@Html.DisplayFor(model => model.CreatedAt)">
                    </div>
                </div>
                <div class="form-group row d-flex align-items-center mb-5">
                    <label class="col-lg-2 form-control-label d-flex justify-content-lg-end">Updated At</label>
                    <div class="col-lg-6">
                        <input type="text" class="form-control" disabled value="@Html.DisplayFor(model => model.UpdatedAt)">
                    </div>
                </div>
                <div class="form-group row d-flex align-items-center mb-5">
                    <label class="col-lg-2 form-control-label d-flex justify-content-lg-end">Disabled At</label>
                    <div class="col-lg-6">
                        <input type="text" class="form-control" disabled value="@Model.DisabledAt">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="col-xl-12">
    <div class="widget has-shadow">
        <div class="widget-body">
            <div class="col-10 ml-auto">
                <div class="section-title mt-3 mb-5">
                    <h4>02. Section Informations</h4>
                </div>
            </div>
            @if (Model.Sections.Count() == 0)
            {
                <p class="col-10 ml-auto">No Section added for this course yet</p>
            }
            else
            {
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th>Order</th>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Content</th>
                            <th>Duration (s)</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var section in Model.Sections.ToList())
                        {
                            <tr>
                                <td>@Html.Raw(section.Order)</td>
                                <td><span class="text-primary">@Html.Raw(section.Id)</span></td>
                                <td>@Html.Raw(section.Name)</td>
                                <td>@(section.Type == 0 ? "Video" : "Reading")</td>
                                <td>@Html.Raw(section.Content)</td>
                                <td>@Html.Raw(section.Duration)</td>
                                <td class="td-actions">
                                    <a href="@Url.Action("Details", "Sections", new { id = section.Id })">
                                        <i class="ion ion-information"></i>
                                    </a>
                                    <a href="@Url.Action("Edit", "Sections", new { id = section.Id })">
                                        <i class="ion ion-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>


            }


            <div class="em-separator separator-dashed"></div>
            <div class="text-right">
                <button class="btn btn-outline-dark" type="button">@Html.ActionLink("Edit", "Edit", new { id = Model.Id })</button>
                <button class="btn btn-light" type="button">@Html.ActionLink("Back to List", "Index")</button>
            </div>
        </div>
    </div>
</div>