@model FCourse.Models.ViewModel.RegisterViewModel

@{
    ViewBag.Title = "FCourse - Register";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}



@using (Html.BeginForm("Register", "User", FormMethod.Post, new { id = "register" }))
{
    @Html.AntiForgeryToken()
    <div class="sign_in_up_bg">
        <div class="container">
            <div class="row justify-content-lg-center justify-content-md-center">
                <div class="col-lg-12">
                    <div class="main_logo25" id="logo">
                        <a href="/Home"><img src="@Url.Content("~/Content/client_img/logoTuche2.png")" alt=""></a>

                    </div>
                </div>
                <div class="col-lg-6 col-md-8">
                    <div class="sign_form">
                        <h2>Welcome to FCourse</h2>
                        <p>Sign Up and Start Learning!</p>

                        <div class="ui search focus">
                            <div class=" ui left icon input swdh11 swdh19">
                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "prompt srch_explore", placeholder = @Html.DisplayNameFor(m => m.UserName) } })

                            </div>
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger float-left mt-2 mb-2" })
                        </div>
                        <div class="ui search focus mt-15">
                            <div class=" ui left icon input swdh11 swdh19">
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "prompt srch_explore", placeholder = @Html.DisplayNameFor(m => m.Password) } })

                            </div>
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger float-left mt-2 mb-2" })
                        </div>
                        <div class="ui search focus mt-15">
                            <div class=" ui left icon input swdh11 swdh19">
                                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "prompt srch_explore", placeholder = @Html.DisplayNameFor(m => m.FirstName) } })

                            </div>
                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger float-left mt-2 mb-2" })
                        </div>
                        <div class="ui search focus mt-15">
                            <div class=" ui left icon input swdh11 swdh19">
                                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "prompt srch_explore", placeholder = @Html.DisplayNameFor(m => m.LastName) } })

                            </div>
                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger float-left mt-2 mb-2" })
                        </div>
                        <div class="ui search focus mt-15">
                            <div class=" ui left icon input swdh11 swdh19">
                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "prompt srch_explore", placeholder = @Html.DisplayNameFor(m => m.Description) } })

                            </div>
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger float-left mt-2 mb-2" })
                        </div>
                        <div class="ui search focus mt-15">
                            <div class=" ui left icon input swdh11 swdh19">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "prompt srch_explore", placeholder = @Html.DisplayNameFor(m => m.Email) } })

                            </div>
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger float-left mt-2 mb-2" })
                        </div>

                        <div class="ui search focus mt-15">
                            <div class=" ui left icon input swdh11 swdh19">
                                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "prompt srch_explore", placeholder = @Html.DisplayNameFor(m => m.PhoneNumber) } })

                            </div>
                            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger float-left mt-2 mb-2" })
                        </div>
                        <button class="login-btn" type="submit">Register</button>

                        <p class="sgntrm145">By signing up, you agree to our <a href="terms_of_use.html">Terms of Use</a> and <a href="terms_of_use.html">Privacy Policy</a>.</p>
                        <p class="mb-0 mt-30">Already have an account? <a href="/User/Login">Log In</a></p>
                    </div>


                </div>
                <div class="sign_footer"><img src="@Url.Content("~/Content/client_img/logoFavicontuche.png")" width="32" height="32" alt="">© 2020 <strong>FCourse</strong>. All Rights Reserved.</div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

