@model FCourse.Models.Course

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_LayoutPageClient.cshtml";
}

<div class="d-flex">
    <div class="lecture-sidebar">
        <h4 class="p-4 lecture-sidebar-course-title">@Model.Name</h4>
        <div class="lecture-sidebar-curriculum-wrap">
            <div class="course-course-section">
                <div class="section-header pp-2 d-flex">
                    <span class="section-name flex-grow-1 ms-2 d-flex">
                    </span>
                </div>
                <div class="course-section-body">
                    <div class="sidebar-section-item active">
                        <div class="section-item-title border-bottom">
                            <a href="#" class="pp-2 d-flex">
                                <span class="lecture-status-icon pr-1">
                                    <i class="uil uil-file icon_142"></i>
                                </span>
                                <div class="title-container pl-2 flex-grow-1 d-flex">
                                    <span class="lecture-name flex-grow-1">
                                        A Note On Asking For Help <small>(01:00)</small>
                                    </span>
                                </div>
                            </a>
                        </div>
                    </div>
                    @if (ViewBag.SectionList != null && ViewBag.SectionCount > 0)
                    {
                        foreach (var item in ViewBag.SectionList)
                        {
                            <div class="sidebar-section-item">
                                <div class="section-item-title">
                                    <a href="#" class="pp-2 d-flex">
                                        @if (item.Type == 0)
                                        {
                                            string id = item.Content;
                                            <span class="lecture-status-icon pr-1">
                                                <i class="uil uil-play-circle icon_142"></i>
                                            </span>
                                            <div id =@id class="title-container pl-2 flex-grow-1 d-flex" onclick="playSectionVideo(this.id)">
                                                <span class="lecture-name flex-grow-1">
                                                    @{
                                                        TimeSpan time = TimeSpan.FromSeconds(item.Duration);
                                                        string str = time.ToString(@"mm\:ss");
                                                    }
                                                    @item.Name <small>(@str)</small>
                                                </span>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="lecture-status-icon pr-1">
                                                <i class="uil uil-file icon_142"></i>
                                            </span>
                                            <div class="title-container pl-2 flex-grow-1 d-flex">
                                                <span class="lecture-name flex-grow-1">
                                                    @item.Name
                                                </span>
                                            </div>
                                        }
                                    </a>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="lecture-container">
        <h2 class="lecture-title mb-4"></h2>
        <div class="lecture-content-inner mt-35">
            <div class="lecture-content-inner-video">
                <div class="video-responsive">
                    <iframe id="existing-iframe" src="https://www.youtube.com/embed/9V-7NXgC3Xs?enablejsapi=1" class="lec-responsive-width"></iframe>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <script type="text/javascript">
        var tag = document.createElement('script');
        tag.id = 'iframe-demo';
        tag.src = 'https://www.youtube.com/iframe_api';
        var firstScriptTag = document.getElementsByTagName('script')[0];
        firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);
        var player;
        function onYouTubeIframeAPIReady() {
            player = new YT.Player('existing-iframe', {
                events: {
                    'onReady': onPlayerReady,
                    'onStateChange': onPlayerStateChange,
                }
            });
        }

        function onPlayerReady(event) {
            event.target.playVideo();
            console.log("vid dai: " + player.getDuration() + "s")
        }
        var done = false;
        function onPlayerStateChange(event) {
            if (event.data == -1 && !done) {
                console.log("vid unstarted: " + player.getCurrentTime())
            }
            if (event.data == YT.PlayerState.CUED && !done) {
                console.log("vid cued")
            }
            if (event.data == YT.PlayerState.BUFFERING && !done) {
                console.log("vid buffering")
            }
            if (event.data == YT.PlayerState.PLAYING && !done) {
                $("#hehe").html("play at " + player.getCurrentTime())
                console.log("vid play tai: " + player.getCurrentTime())
            }
            if (event.data == YT.PlayerState.PAUSED && !done) {
                $("#hehe").html("pause at " + player.getCurrentTime())
                console.log("vid pause tai: " + player.getCurrentTime())
            }
            if (event.data == YT.PlayerState.ENDED && !done) {
                console.log("vid end tai: " + player.getCurrentTime())
                loadVideoById()

            }
        }
        function loadVideoById(id, startAt) {
            // load ra nhung chua chay, start o giay 40
            player.cueVideoById(id, startAt);
        }

        function playSectionVideo(id) {
            loadVideoById(id, 1);
        }
    </script>
}